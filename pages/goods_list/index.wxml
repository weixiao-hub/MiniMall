<view class="goods_list">
	<Search></Search>
	<tabbar tabs="{{tabs}}" bindcurrentIndex="currentIndex">
		<block wx:if="{{tabs[0].isActive}}">
			<view class="first_tab">
				<navigator class="goods_item" wx:for="{{goods_list}}" wx:key="goods_id" url="/pages/goods_detail/index?goods_id={{item.goods_id}}">
					<!-- 左侧图片 -->
					<view class="goods_img">
						<image src="{{item.goods_small_logo?item.goods_small_logo:'https://ww1.sinaimg.cn/large/007rAy9hgy1g24by9t530j30i20i2glm.jpg'}}" mode="widthFix"></image>
					</view>
					<!-- 右侧内容 -->
					<view class="goods_info">
						<view class="goods_name">{{item.goods_name}}</view>
						<view class="goods_price">￥{{item.goods_price}}</view>
					</view>
				</navigator>
			</view>
		</block>
		<block wx:elif="{{tabs[1].isActive}}">1</block>
		<block wx:else>2</block>
	</tabbar>
</view>