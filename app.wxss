@import "./styles/iconfonts.wxss";

/* 小程序不支持通配符 */
page,
view,
text,
swiper,
swiper-item,
image,
navigator {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

/* 主体颜色 通过变量来实现 */
page {
  /* 定义主题颜色 */
  --themeColor: #eb4450;
  /* 定义统一字体大小 假设设计稿是375px */
  font-size: 28rpx;
}

image {
  width: 100%;
}